# Use Git LFS for large/binary assets (avoid polluting history)
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.prism -diff

# Improve diffs for code
*.ts text diff=ts
*.tsx text diff=ts
*.rs text diff=rust
*.c text diff=c
*.h text diff=c
